extends base/base

block content
  .container(ng-controller="doRegister")
    .row
      .col-md-6.col-md-offset-3.well
        .info
          form(action="/register",name="register",method="post",role="form")
            .alert.alert-warning
              .form-group
                label(for="account") Account
                input#account.form-control(type="email",placeholder="Please enter your email",name="account",ng-model="account")
              .form-group
                label(for="name") Display name
                input#name.form-control(type="text",placeholder="Please enter your name to display",name="name",ng-model="name")
              .form-group
                label(for="password") Password
                input#password.form-control(type="password",placeholder="Please enter your password",name="password",ng-model="password")
              .form-group
                label(for="chkpass") Re-type password
                input#chkpass.form-control(type="password",placeholder="Please enter your password again",ng-model="chkpass")
            hr
            .center-x.input-group-btn
              button.btn.btn-primary(type="submit") Register
              button.btn.btn-danger(type="reset") Reset
