extends ./base/base

block optionalJS
  script(src="/js/a.js")

block extendStyle
  style.
    .nav, .pagination, .carousel, .panel-title a { cursor: pointer; }
    a:hover, a:active, a:focus, a:visited { outline: none;}
    a:selected { outline: none; }
    div.outer { height: 70vh; }
    div.chatarea { width: 100%; height: 80%; overflow-y: auto; }
    .right { text-align: right; }

block content
  .container(ng-controller="DropdownCtrl")
    .row
      // sidebar start
      aside.col-md-3
        .row
          .alert.alert-info.col-md-10.outer
            if d.test.filename
              .dropdown(on-toggle="toggled(open)")
                a.dropdown-toggle(href="javascript:void(0);") Test
                  span.caret
                ul.dropdown-menu
                  each file, k in d.test.filename
                    li: a(href="")= file
      // sidebar end
      article.col-md-9
        .row
          .well.col-md-12.outer
            .chatarea.alert.alert-warning
            form(ng-submit="submitText()")
              .input-group
                input.form-control(type="text",ng-model="newtext",placeholder="輸入點東西吧")
                .input-group-btn
                  button.btn.btn-danger.text-clean(type="reset") 清除
                  button.btn.btn-primary.text-submit(type="submit") 送出

block footer
  footer
    nav.navbar.navbar-inverse.navbar-fixed-bottom(role="navigation")
      .navbar-header
        a.navbar-brand(href="#") Kimz
